<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lang="pl-pl">
    <meta name="maintainer" content="imralav@gmail.com" />
    <script src="/cv/js/vxmlapp.min.js"></script>
    <script th:inline="javascript">
        /*<![CDATA[*/
            var booking = /*[[${booking}]]*/ null;
            var customerCode = /*[[${customerCode}]]*/ 0000;
        /*]]>*/
    </script>
    <form>
        <block>
            <prompt>
                    Rezerwacja na podany kod to: Film: <value expr="booking.movieTitle"/>,
                    dnia: <value expr="booking.readableShowingDate"/>, na godzinę: <value expr="booking.readableShowingTime"/>,
                    miejsca: <value expr="booking.readableSeats"/>.
            </prompt>
        </block>
        <field name="shouldCancel">
            <grammar xml:lang="pl-pl" root="boolean" version="1.0" type="application/srgs+xml" tag-format="semantics/1.0">
                <rule id="boolean" scope="public">
                    <one-of>
                        <item>tak <tag>out=true;</tag></item>
                        <item>nie <tag>out=false;</tag></item>
                    </one-of>
                </rule>
            </grammar>
            <prompt>Czy na pewno anulować tę rezerwację?</prompt>
            <filled>
                <submit next="cancel/cancelBooking" namelist="customerCode shouldCancel" />
            </filled>
            <nomatch>
                <prompt>Nie rozpoznano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </nomatch>
            <noinput>
                <prompt>Nie usłyszano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </noinput>
        </field>
    </form>
</vxml>