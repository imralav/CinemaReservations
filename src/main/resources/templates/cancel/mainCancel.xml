<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lang="pl-pl">
    <meta name="maintainer" content="imralav@gmail.com" />
    <script src="/cv/js/vxmlapp.min.js"></script>
    <form>
        <field name="customerCode">
            <grammar xml:lang="pl-pl" root="cyferki" type="application/srgs+xml">
                <rule id="cyferki" scope="public">
                    <item repeat="1-4">
                        <ruleref uri="#digit"/>
                    </item>
                </rule>
                <rule id="digit" scope="public">
                    <one-of>
                        <item>zero <tag>customerCode+='0'; digitsService.add('0')</tag></item>
                        <item>jeden <tag>customerCode+='1'; digitsService.add('1')</tag></item>
                        <item>dwa <tag>customerCode+='2'; digitsService.add('2')</tag></item>
                        <item>trzy <tag>customerCode+='3'; digitsService.add('3')</tag></item>
                        <item>cztery <tag>customerCode+='4'; digitsService.add('4')</tag></item>
                        <item>pięć <tag>customerCode+='5'; digitsService.add('5')</tag></item>
                        <item>sześć <tag>customerCode+='6'; digitsService.add('6')</tag></item>
                        <item>siedem <tag>customerCode+='7'; digitsService.add('7')</tag></item>
                        <item>osiem <tag>customerCode+='8'; digitsService.add('8')</tag></item>
                        <item>dziewięć <tag>customerCode+='9'; digitsService.add('9')</tag></item>
                    </one-of>
                </rule>
            </grammar>
            <prompt>Podaj kod klienta uzyskany podczas rezerwacji.</prompt>
            <filled>
                <prompt>Sprawdzam kod <value expr="customerCode"/>.</prompt>
                <prompt>Po przetworzeniu <say-as interpret-as="digits"><value expr="digitsService.get()"/></say-as>.</prompt>
                
                <log expr="'Customer code: ' + customerCode"/>
                <log expr="'Digits: ' + digitsService.get()"/>
                <submit next="cancel/passCustomerCode" />
            </filled>
            <nomatch>
                <prompt>Nie rozpoznano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </nomatch>
            <noinput>
                <prompt>Nie usłyszano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </noinput>
        </field>
    </form>
</vxml>