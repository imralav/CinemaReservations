<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lang="pl-pl">
    <meta name="maintainer" content="imralav@gmail.com" />
    <script th:inline="javascript">
        /*<![CDATA[*/
            var date = /*[[${date}]]*/ null;
        /*]]>*/
    </script>
    <form>
        <field name="choice">
            <grammar xml:lang="pl-pl" root="ROOT">
                <rule id="ROOT">
                    <one-of>
                        <item> repertuar </item>
                        <item> gatunek </item>
                        <item> godzina </item>
                        <item> powrót </item>
                    </one-of>
                </rule>
            </grammar>
            <prompt>Powiedz REPERTUAR, by poznać jakie gramy w tym dniu filmy.
                    GATUNEK, by usłyszeć sugestie według wybranego gatunku.
                    GODZINA, by usłyszeć sugestie według wybranej godziny lub
                    POWRÓT, by wrócić do poprzedniego wyboru.
            </prompt>
            <filled>
                <if cond="choice==='repertuar'">
                    <prompt>Pokazywanie repertuaru.</prompt>
<!--                     <submit next="/cv/reservation/showRepertoire" namelist="date"/> -->
                <elseif cond="choice==='gatunek'"/>
                    <prompt>Pokazywanie gatunków.</prompt>
<!--                     <submit next="/cv/reservation/showGenre" namelist="date"/> -->
                <elseif cond="choice==='godzina'"/>
                    <prompt>Pytanie o godzinę.</prompt>
<!--                     <submit next="/cv/reservation/showGenre" namelist="date"/> -->
                <elseif cond="choice==='powrót'"/>
                    <goto next="/cv/reservation/collectShowingDate"/>
                </if>
                <clear/>
            </filled>
            <nomatch>
                <prompt>Nie rozpoznano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </nomatch>
            <noinput>
                <prompt>Nie usłyszano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </noinput>
        </field>
    </form>
</vxml>