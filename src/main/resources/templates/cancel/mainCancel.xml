<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lang="pl-pl">
    <meta name="maintainer" content="imralav@gmail.com" />
    <script src="/cv/js/vxmlapp.min.js"></script>
    <form>
        <field name="customerCode">
            <grammar xml:lang="pl-pl" root="cyferki" type="application/srgs+xml" tag-format="semantics/1.0">
                <rule id="cyferki" scope="public">
                    <tag>out="";</tag>
                    <item repeat="1-4">
                        <ruleref uri="#digit"/>
                        <tag>out+=rules.latest();</tag>
                    </item>
                </rule>
                <rule id="digit" scope="public">
                    <one-of>
                        <item>0</item>
                        <item>1</item>
                        <item>2</item>
                        <item>3</item>
                        <item>4</item>
                        <item>5</item>
                        <item>6</item>
                        <item>7</item>
                        <item>8</item>
                        <item>9</item>
                    </one-of>
                </rule>
            </grammar>
            <prompt>Podaj kod klienta uzyskany podczas rezerwacji.</prompt>
            <filled>
                <prompt>Sprawdzam kod <value expr="customerCode"/>.</prompt>
                <prompt>Po przetworzeniu <say-as interpret-as="digits"><value expr="digitsService.get()"/></say-as>.</prompt>
                
                <log expr="'Customer code: ' + customerCode"/>
                <log expr="'Digits: ' + digitsService.get()"/>
<!--                 <submit next="cancel/passCustomerCode" /> -->
                <clear/>
            </filled>
            <nomatch>
                <prompt>Nie rozpoznano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </nomatch>
            <noinput>
                <prompt>Nie usłyszano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </noinput>
        </field>
    </form>
</vxml>