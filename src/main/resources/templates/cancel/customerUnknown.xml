<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lang="pl-pl">
    <meta name="maintainer" content="imralav@gmail.com" />
    <form>
        <field name="customerCode" type="number">
            <prompt>Podaj numer klienta uzyskany podczas rezerwacji.</prompt>
            <filled>
                <prompt>Sprawdzam numer <say-as interpret-as="number"><value expr="customerCode"/></say-as>.</prompt>
                <submit next="/cv/cancel" />
            </filled>
            <nomatch>
                <prompt>Nie rozpoznano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </nomatch>
            <noinput>
                <prompt>Nie usłyszano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </noinput>
        </field>
    </form>
</vxml>