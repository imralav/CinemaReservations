<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xml:lang="pl-pl">
    <meta name="maintainer" content="imralav@gmail.com" />
    <script src="/cv/js/vxmlapp.min.js"></script>
    <form>
        <field name="customerCode">
            <grammar mode="voice" xml:lang="pl-pl" root="digits">
                <rule id="digits">
                    <item repeat="1-4">
                        <one-of>
                            <ruleref uri="#digit" />
                        </one-of>
                    </item>
                </rule>
                <rule id="digit">
                    <one-of>
                        <item>zero <tag>cancelContext.addDigit(0);</tag></item>
                        <item>jeden <tag>cancelContext.addDigit(1);</tag></item>
                        <item>dwa <tag>cancelContext.addDigit(2);</tag></item>
                        <item>trzy <tag>cancelContext.addDigit(3);</tag></item>
                        <item>cztery <tag>cancelContext.addDigit(4);</tag></item>
                        <item>pięć <tag>cancelContext.addDigit(5);</tag></item>
                        <item>sześć <tag>cancelContext.addDigit(6);</tag></item>
                        <item>siedem <tag>cancelContext.addDigit(7);</tag></item>
                        <item>osiem <tag>cancelContext.addDigit(8);</tag></item>
                        <item>dziewięć <tag>cancelContext.addDigit(9);</tag></item>
                    </one-of>
                </rule>
            </grammar>
            <prompt>Podaj numer klienta uzyskany podczas rezerwacji.</prompt>
            <filled>
                <prompt>Sprawdzam numer <say-as interpret-as="number"><value expr="customerCode"/></say-as>.</prompt>
                <submit next="/cv/cancel" />
            </filled>
            <nomatch>
                <prompt>Nie rozpoznano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </nomatch>
            <noinput>
                <prompt>Nie usłyszano wyboru, proszę spróbować ponownie.</prompt>
                <reprompt />
            </noinput>
        </field>
    </form>
</vxml>